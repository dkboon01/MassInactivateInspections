@model MassInactiveInspections.Models.CustomerNumber
@*@model IEnumerable<MassInactiveInspections.Models.CustomerNumber>*@
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    //ViewBag.Title = "Customer Number";
}

@*<script src="http://10.0.0.183:8080/target/target-script-min.js#anonymous"></script>*@

@*@Url.RouteUrl("DefaultApi", new { httproute = "\", controller = \"Account" });*@
<style>
    #wrap {
        background-color: transparent;
        border: 0px solid;
    }

    hr {
        display: none;
    }
</style>



<div class="container">
    <h2>@ViewBag.Title</h2>
    <div class="bs-callout bs-callout-info" style="margin-bottom: 0px;">
    </div>
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("CheckForNumber", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.customerNum, new { @class = "col-md-4 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.customerNum, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.customerNum)
                        <div> @ViewBag.result </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 col-md-push-4">
                        <button type="submit">Submit</button>
                    </div>
                </div>
            }
        </section>
    </div>
</div>